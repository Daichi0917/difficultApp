<% provide(:title, "All Users") %>
<h1>ユーザ一覧</h1>

<div class="col-md-4 col-md-offset-1">
  <%= form_with(url: import_users_path, multipart: true, method: :post) do |f| %>
    <div class="form-inline">
      <div class="form-group">
        <%= f.submit "ファイルを選択", type: "button", 
            onclick: "$('#file-import').click();", class: "form-control-file select-file" %>
        <%= f.text_field :filename, disabled: true, id: "filename" %>
        <%= f.file_field :file, style: "display: none",
            onchange: "file_selected($(this))", id: "file-import" %>
        <%= f.submit "CSVをインポート", class: "btn btn-primary btn-block btn-csv-import" %>
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>
  <table class="table" id="table-users">
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if current_user.admin? && !current_user?(user) %>
            <div class="user-name">
              <%= link_to user.name, user %>
            </div>
            <div class="user-delete">
              <span> | </span>
              <%= link_to "削除", user, method: :delete,
                  data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %>
            </div>
            <div class="user-edit">
              <%= link_to "編集", edit_user_path(user), class: "btn btn-primary btn-edit" %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>

<script type="text/javascript">
  function file_selected(file_field){
    var filename = $(file_field)[0].files[0].name;
    $("#filename").val(filename);
  }
</script>